<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<title>LJMU Holiday Requests</title>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>
<body>
	<div id="wrapper">

	   <div id="header">
	   <h3>Liverpool John Moores University</h3>
	   <h4>Holiday Requests</h4>
	   </div>
	   <div id="navigation" >



	     <p><%= link_to "| Log in", login_path %>| <%= link_to "| Log Out ", logout_path %> |<%= link_to "| Requests", holidays_path %>|<%= link_to "| New Holiday", new_holiday_path 
		%> |<%= link_to "| Posts |", posts_path 
			%>|</p>
	</div>

			 <div id="content">				
			           <table width="500" border="1" align="center" class="gridtable" id="meh">
			    <tr id="">

			      <th height="26" scope="col">Username</th>
			      <th scope="col">Date Leaving</th>
			      <th scope="col">Date Submitted</th>
			      <th scope="col">Approved</th>
			      <th scope="col">Date Updated</th>


			    </tr>
					<% for holiday in @holidays%>
				<tr>

				  <td><%= link_to holiday.user.username, holiday %></td>
				  <td><%= holiday.dateleaving%></td>
				  <td><%= time_ago_in_words(holiday.created_at)%></td>
				  <td><%= holiday.approved%></td>
				  <td><%= time_ago_in_words(holiday.updated_at)%></td>
				</tr>
				<% end %>
									 </div>

			</table>
<h3> Standard Pagination </h3>
				<%= will_paginate @holidays %>	
<h3> Ajax Pagination </h3>	   
	<%= will_paginate @holidays, :renderer => 'RemoteLinkRenderer' , :remote => {:update => "wrapper"} %>
					</div>



				</body>

				</html>




